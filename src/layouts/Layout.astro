---
import "../styles/globals.css";
const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang="fr" class="scroll-smooth">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{title}</title>
    <link href="/src/styles/globals.css" rel="stylesheet" />
  </head>
  <body class=" font-CRC35 text-xl">
    <header class="bg-gray-900 text-white p-4">
      <div class="container mx-auto flex flex-col md:flex-row justify-between items-center">
        <h1 class="text-6xl font-Signature -mt-2 md:mt-0 mb-2">Centre equestre des Vallonies</h1>
        <nav>
          <ul class="flex gap-6">
            <li><a href="#hero" class="hover:text-blue-400">Accueil</a></li>
            <li><a href="#activities" class="hover:text-blue-400">Activités</a></li>
            <li><a href="#prices" class="hover:text-blue-400">Tarifs</a></li>
            <li><a href="#contact" class="hover:text-blue-400">Contact</a></li>
          </ul>
        </nav>
      </div>
    </header>
    <main>
      <slot />
    </main>
    <footer class="bg-gray-900 text-white text-center p-4">
      <p>&copy; 2025 Centre Équestre des vallonies - Tous droits réservés.</p>
    </footer>
  </body>
</html>
